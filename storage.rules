
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Permite leitura pública de imagens de branding.
    // A escrita é permitida apenas para o dono do diretório (usuário autenticado).
    match /branding/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite que usuários autenticados façam upload de documentos em pastas específicas.
    // A segurança de acesso a esses arquivos é controlada pelo Firestore, que armazena as URLs.
    match /(invoices|contracts|receipts|signed-contracts)/{allPaths=**} {
       allow read, write: if request.auth != null;
    }
    
    // Regra padrão: nega acesso a todos os outros caminhos por segurança,
    // exceto para usuários autenticados (regra geral).
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
